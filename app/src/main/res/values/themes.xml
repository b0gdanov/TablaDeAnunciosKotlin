<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TablaDeAnunciosKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- No ActionBar theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="ActionBarCustom">
        <!-- Primary brand color. -->
        <item name="android:textColorSecondary">@color/ic_main</item>
    </style>

    <style name="ToolbarMainStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorControlNormal">@color/ic_main</item>
        <item name="fontFamily">serif-monospace</item>
    </style>

    <!-- MyBtnStyle. -->
    <style name="MyBtnStyle">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/ic_btn_5_k_1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
    </style>

        <!-- Поля Text. -->
    <style name="TextAds">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <!-- Поля Text.Edit. -->
    <style name="TextAds.Edit">
        <item name="android:textColorHint">@color/hint_light_green</item>
    </style>

    <!-- Поля с заголовков. -->
    <style name="HeadingsTextAds">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textColor">@color/ic_main</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Разделительные линии. -->
    <style name="LineEditAds">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ic_main</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Круглые кнопки. -->
    <style name="RoundButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- Просмотры и избранное. -->
    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Счётчики просмотров и избранных. -->
    <style name="ViewsAndFavoritesCounters">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/ic_main</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Поля текста TextView Название графы. -->
    <style name="TextColumnName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#f8f8f9</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Поля текста TextView Значение графы. -->
    <style name="TextColumnValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#1ee500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>